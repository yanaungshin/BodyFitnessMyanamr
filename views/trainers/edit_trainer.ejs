<!DOCTYPE html>
<html>
  <% include ../partials/header.ejs %>
  <body>
    <div class="d-flex" id="wrapper">
      <% include ../partials/sidebar.ejs %>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <% include ../partials/nav.ejs %>
        <div class="container-fluid">

          <h1><%= title %></h1>

          <form action="/trainers/edit/<%=trainer._id%>" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="exampleFormControlInput1">Trainer Name</label>
              <input type="text" class="form-control" id="exampleFormControlInput1" name="trainername" value="<%= trainer.trainername %>">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Address</label>
              <input type="text" class="form-control" id="address" name="address" value="<%= trainer.address %>">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">phone</label>
              <input type="number" class="form-control" id="phone" name="phone" value="<%= trainer.phone %>">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= trainer.email %>">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">trainer feed</label>
              <input type="nember" class="form-control" id="trainerfeed" name="trainerfeed" value="<%= trainer.trainerfeed %>">
            </div>
            <div class="form-group">
              <label for="photo">Photo:</label>
              <input type="file" name="traphoto" id="traphoto" accept="image/*"><p></p>
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Select Class</label>
              <select class="mdb-select md-form" multiple name="classes">
                <option value="" disabled selected>Choose your Class</option>
                <option value="1" name="classes">Yoga</option>
                <option value="2" name="classes">Kickboxing</option>
                <option value="3" name="classes">Personal Training</option>
                <option value="4" name="classes">Zumba</option>
                <option value="5" name="classes">Kilocycle</option>
                <option value="6" name="classes">Barre-less-barre</option>
                <option value="7" name="classes">Cardio funk Dance Party</option>
              </select>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Other Infomation</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="otinfo" value="<%= trainer.otinfo %>">
              </textarea>
            <button type="submit">Submit</button>
          </form>

        </div>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
  <% include ../partials/scripts.ejs %>
</html>
