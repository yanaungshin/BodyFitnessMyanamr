<!DOCTYPE html>
<html>
  <% include ../partials/header.ejs %>
  <body>
    <div class="d-flex" id="wrapper">
      <% include ../partials/sidebar.ejs %>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <% include ../partials/nav.ejs %>
        <div class="container-fluid">
          <table>
            <tr>
              <td><label for="centername">Center Name</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.centername %></h6></td>
            </tr>
            <tr>
              <td><label for="Address">Addres</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.address %></h6></td>
            </tr>
            <tr>
              <td><label for="phone">Phone</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.phone %></h6></td>
            </tr>
            <tr>
              <td><label for="opttime">Opening Time</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.opttime %></h6></td>
            </tr>
            <tr>
              <td><label for="closetime">Close Time</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.closetime %></h6></td>
            </tr>
            <tr>
              <td><label for="memberfeed">Member Feed</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.memberfees %></h6></td>
            </tr>
            <tr>
              <td><label for="classes">Classes</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.classes %></h6></td>
            </tr>
            <tr>
              <td><label for="itinfo">Other Infomation</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.otinfo %></h6></td>
            </tr>
            <tr>
              <td><label for ="photo">Photo</label></td>
              <td><p>-</p></td>
              <td><div class="teacher-profile">
                <% if (center.artphoto) { %>
                  <img src="<%= center.artphoto %>" style="width:280px; height:280px; border-style:none;" alt="Center Photo">
                <% } else { %>
                  <img src="../images/noimage.svg" class="img-responsive" alt="no image">
                <% } %>
              </div></td>
            </tr>

            <tr>
              <td><label for="updated">Last Updated</label></td>
              <td><p>-</p></td>
              <td><h6><%= center.updated %></h6></td>
            </tr>
          </table>
          <hr>
          <% if(user){ %>
            <% if(user.id == center.author){ %>
              <a class="btn btn-outline-secondary" href="/centers/edit/<%=center._id%>" role="button">Edit</a>
              <a class="btn btn-outline-danger delete-center" href="#" role="button" data-id=<%=center._id%>>Delete</a>
            <% } %>
          <% } %>
        </div>

        <div class="">
          <table>
            <tr>
              <td><ul>
                <% if (trainers && trainers.length > 0) { %>
                  <% trainers.forEach(function(trainer) { %>
                    <li class="list-group-item">
                      <a href="/trainers/<%=trainer._id%>"> <%= trainer.trainername %></a>
                    </li>
                  <% }); %>
                <% } else { %>
                  <h1 style="text-align:right;"> Sorry ! No Trainers !</h1>
                <% } %>
              </ul></td>
            </tr>
          </table>

        </div>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
  <% include ../partials/scripts.ejs %>
</html>
