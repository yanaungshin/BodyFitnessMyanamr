            <tr>
              <td><label for="updated">Last Updated</label></td>
              <td><p>-</p></td>
              <td><h6><%= trainer.updated %></h6></td>
            </tr>
          </table>
          <hr>
              <a class="btn btn-outline-danger btn-sm delete-trainer" href="#" data-id=<%=trainer._id%>>Delete</a>
            </div>
      </div>
    </div>
    <% include ../partials/admin/footer.ejs %>
