              <td><label for="email">Email</label></td>
              <td><p>-</p></td>
              <td><h6><%= trainer.email %></h6></td>
            </tr>
            <tr>
              <td><label for="age">Age</label></td>
              <td><p>-</p></td>
              <td><h6><%= trainer.age %></h6></td>
            </tr>
            <tr>
              <td><label for="certificate">Certificate</label></td>
              <td><p>-</p></td>
              <td><h6><%= trainer.certificate %></h6></td>
